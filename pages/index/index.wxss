.slides {
  height: 400rpx;
  width: 100%;
}

.messagesArr {
  width: 100%;
  height: 100%;
}

.grids {
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #EEE;
  border-left: 1rpx olid #EEE;
  background-color: #FFF;
}

/* 子类 */
.grids .item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33.33333333333%;
  height: 230rpx;
  border-right: 1rpx solid #EEE;
  border-bottom: 1rpx solid #EEE;
  box-sizing: border-box;
}

.grids .item image {
  width: 70px;
  height: 70px;
}

.grids .item text {
  margin-top: 20rpx;
  color: #999;
  height: 28rpx;
  font-size: 25rpx;
}
